{% extends 'base.html.twig' %}

{% block title %}{{'search.found_reviews'|trans}}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{'search.found_reviews'|trans}}:
        {% if reviews|length %}
            {% for review in reviews %}
                <br><a href="{{ path('review', {'reviewId': review.id}) }}">{{ review.getTitle() }}</a>
            {% endfor %}
        {% else %}
            <p>{{'search.reviews_not_found'|trans}}</p>
        {% endif %}
    </div>
{% endblock %}
