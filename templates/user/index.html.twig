{% extends 'base.html.twig' %}

{% block title %}Личная страница{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {% if user %}
            <h1>Привет, {{ user.getName() }} {{ user.getSurname()}} ✅</h1>
        {% else %}
            <h1>Данный пользователь не найден</h1>
        {% endif %}
        Ваши обзоры:
        {% if reviews|length %}
            {% for review in reviews %}
                <a href="{{ path('review', {'reviewId': review.id}) }}">{{ review.getTitle() }}</a>
            {% endfor %}
        {% else %}
            <p>У вас пока нет обзоров</p>
        {% endif %}
    </div>
{% endblock %}
