{% extends 'base.html.twig' %}

{% block title %}Create review!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.text) }}
            {{ form_label(form.images) }}
            {{form_widget(form.images, { 'multiple': true , 'attr': {'multiple': 'multiple'} })}}
            {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts_after %}
<script>
  let split = function( val ) {
    return val.split(",").map((el)=>el.trim());
  };

  $(document).ready(function () {
    $('#form_tags').autocomplete({
      source: "{{ path('tag_autocomplete') }}",
      minLength: 2,
      focus: function() {
        return false;
      },
      select: function( event, ui ) {
        let terms = split( this.value );
        terms.pop();
        terms.push(ui.item.value.trim());
        this.value = terms.join(", ");
        return false;
      }
    });
  })


</script>

{% endblock %}
